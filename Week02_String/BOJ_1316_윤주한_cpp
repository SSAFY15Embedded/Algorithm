#include <iostream>

using namespace std;

int N;
int DAT[26];
int ans = 0;

int isOK(char str[101]){
    for(int i = 0; i < 26; i++){
        DAT[i] = 0;
    }
    
    char prev = '\0';
    for(int i = 0; str[i] != '\0'; i++){
        if(prev == str[i]){
            continue;
        }
        else{
            if(DAT[str[i] - 'a'] > 0){
                return 0;
            }
            else{
                DAT[str[i] - 'a']++;    
            }
        }
        prev = str[i];
    }
    return 1;
}

int main() {
    cin >> N;
    for(int i = 0; i < N; i++){
        char str[101];
        cin >> str;
        if(isOK(str) == 1){
            ans++;
        }
    }
    cout << ans;
}
